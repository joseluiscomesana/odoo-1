<odoo>
  <data>
    <record id="view_prueba_visit_form" model="ir.ui.view">
      <field name="name">view.prueba.visit.form</field>
      <field name="model">prueba.visit</field>
      <field name="arch" type="xml">
        <form string="Visita">
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="toggle_state" type="object" class="oe_stat_button" 
                      string="Cambiar realizada" icon="fa-play-circle"
              />
            </div>
            <group name="group_top">
              <group name="group_left">
                <field name="customer"/>
                <field name="date"/>
                <field name="type"/>
              </group>
              <group name="group_right">
                <field name="name"/>
                <field name="done"/>
                <field name="image" widget="image"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_prueba_visit_tree" model="ir.ui.view">
      <field name="name">view.prueba.visit.tree</field>
      <field name="model">prueba.visit</field>
      <field name="arch" type="xml">
        <tree string="Visita">
          <field name="customer" />
          <field name="name" />
          <field name="type" />
          <field name="date" />
        </tree>
      </field>
    </record>

    <record id="view_prueba_visit_kanban" model="ir.ui.view">
      <field name="name">view.prueba.visit.kanban</field>
      <field name="model">prueba.visit</field>
      <field name="arch" type="xml">
        <kanban class="o_prueba_visit_kanban">
          <field name="id"/>
          <field name="name"/>
          <field name="customer"/>
          <field name="date"/>
          <field name="type"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img alt="Avatar" 
                        t-att-src="kanban_image('prueba.visit', 'image', record.id.raw_value)"/>
                </div>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name"/>
                    <field name="customer"/>
                  </strong>
                  <div t-if="record.date.value">
                    <t t-esc="record.date.value"/>
                  </div>
                  <div t-if="record.type.value">
                    <t t-esc="record.type.value"/>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="view_prueba_visit_search" model="ir.ui.view">
      <field name="name">view_prueba_visit_search</field>
      <field name="model">prueba.visit</field>
      <field name="arch" type="xml">
        <search string="Filtrar visitas">
          <field name="name" />
          <field name="customer" />
          <field name="type" />
          <field name="date" />
          <group expand="0" string="Group By">
            <filter name="groupby_type" string="Tipo" domain="[]" context="{'group_by':'type'}"
                    help="Agrupar por tipo"/>
            <filter name="groupby_date" string="Fecha" context="{'group_by':'date:year'}"
                    help="Agrupar por fecha"/>
          </group>
          <filter name="filter_by_done" string="Realizada" domain="[('','=,'')]" 
                  help=""/>
        </search>
      </field>
    </record>

    <record id="action_prueba_visit_view" model="ir.actions.act_window">
      <field name="name">Visita</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">prueba.visit</field>
      <field name="view_mode">tree,form,kanban</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Visitas
        </p>
        <p>
          Click 'Nuevo' para a√±adir nuevos elementos
        </p>
      </field>
    </record>

    <menuitem id="menu_prueba_root" name="Prueba" sequence="10" />
    <menuitem id="menu_prueba_visit_categ" name="Operaciones" parent="menu_prueba_root" sequence="0" />
    <menuitem id="menu_prueba_visit" name="Visitas" parent="menu_prueba_visit_categ" sequence="0" action="action_prueba_visit_view" />
  </data>
</odoo>
