<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="informe_geo.vista_tree" model="ir.ui.view">
      <field name="name">informe_geo vista de árbol</field>
      <field name="model">informe_geo.informe</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="filename"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="informe_geo.vista_formulario">
        <field name="name">Informe</field>
        <field name="model">informe_geo.informe</field>
        <field name="arch" type="xml">
            <form string="Informe form">
                <group colspan="4">
                    <group colspan="2" col="2">
                        <separator string="Datos del informe:" colspan="2"/>
                        <field name="name"/>
                    </group>

                    <group colspan="2" col="2">
                        <separator string="Informe:" colspan="2"/>
                        <field name="filename"/>
                    </group>

                    <notebook colspan="4">
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>

                </group>
            </form>
        </field>
    </record>



    <record model="ir.ui.view" id="informe_geo.search_view">
        <field name="name">informe_geo search</field>
        <field name="model">informe_geo.informe</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    


    <!-- actions opening views on models -->

    <record id="informe_geo.informe_view_action" model="ir.actions.act_window">
      <field name="name">Informe Vista</field>
      <!-- <field name="type">ir.actions.act_window</field> -->
      <field name="res_model">informe_geo.informe</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Informes
        </p>
        <p>
          Click 'Crear' para añadir nuevos elementos
        </p>
      </field> -->
    </record>


