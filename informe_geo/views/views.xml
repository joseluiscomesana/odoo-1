<odoo>
  <data>
    <record id="view_informe_geo_informe_form" model="ir.ui.view">
      <field name="name">view.informe_geo.informe.form</field>
      <field name="model">informe_geo.informe</field>
      <field name="arch" type="xml">
        <form string="Informe">
          <sheet>
            <!-- <div class="oe_button_box" name="button_box">
              <button name="cambiar_hecho" type="object" class="oe_stat_button" 
                      string="Cambiar realizada" icon="fa-play-circle"
              />
            </div> -->
            <group name="group_top">
              <group name="group_left">
                <field name="name"/>
                <field name="filename"/>
              </group>
              <group name="group_right">
                <field name="description"/>
                <!-- <field name="done"/>-->
                <field name="image" widget="image"/> 
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_informe_geo_informe_tree" model="ir.ui.view">
      <field name="name">view.informe_geo.informe.tree</field>
      <field name="model">informe_geo.informe</field>
      <field name="arch" type="xml">
        <tree>
          <field name="image"/>
          <field name="name"/>
          <field name="filename"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record id="action_informe_geo_informe_view" model="ir.actions.act_window">
      <field name="name">Informe</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">informe_geo.informe</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Informes
        </p>
        <p>
          Click 'Crear' para a√±adir nuevos elementos
        </p>
      </field>
    </record>


