<template id="colocar_en_barra" name="Colocar en Barra del Editor" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_georedia.s_porque_nosotros" t-thumbnail="/website/static/src/img/snippets_thumbs/s_text_block.svg"/>
    </xpath>
</template>

<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
    <xpath expr="//div[@id='snippet_structure']/div[2]" position="inside">
        <t t-snippet="theme_georedia.s_porque_nosotros"
                t-thumbnail="/website/static/src/img/snippets_thumbs/s_text_block.svg"/>
